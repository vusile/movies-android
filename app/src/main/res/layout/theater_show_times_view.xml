<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingBottom="@dimen/padding_bottom_theater_show_times_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:paddingRight="@dimen/padding_booking_button"
            android:paddingEnd="@dimen/padding_booking_button"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_theater_name"
                style="@style/Theme.MoviesTanzania.Value" />

            <TextView
                android:id="@+id/text_theater_show_times"
                style="@style/Theme.MoviesTanzania.Label" />

            <TextView
                android:id="@+id/text_theater_pricing"
                style="@style/Theme.MoviesTanzania.Label" />

        </LinearLayout>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_book_movie"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:text="@string/book_now" />
    </LinearLayout>

    <View
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

</LinearLayout>